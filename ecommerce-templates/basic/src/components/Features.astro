---
import { Icon } from "astro-icon/components";
import { cmFeatures } from "../locale/cms-locale.json";

// Интерфейсы для типизации
interface FeatureItem {
  title: string;
  description: string;
  icon: string;
}

interface StyleProperty {
  label: string;
  value: string | FeatureItem[];
}

interface FeaturesData {
  labelSection: string;
  title: StyleProperty;
  subtitle: StyleProperty;
  items: StyleProperty;
}

// Приведение типа и извлечение данных
const featuresData = cmFeatures as unknown as FeaturesData;
const title = featuresData?.title?.value as string || "";
const subtitle = featuresData?.subtitle?.value as string || "";
const items = featuresData?.items?.value as FeatureItem[] || [];
---

<section class="max-w-screen-xl">
  <div class="mt-16 md:mt-0">
    <h2 class="text-2xl lg:text-5xl font-bold lg:tracking-tight">
      {title}
    </h2>
    <p class="text-lg mt-4">
      {subtitle}
    </p>
  </div>

  <div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
    {
      items.map((item) => (
        <div class="flex gap-4 items-start">
          <div class="mt-1 bg-black rounded-full p-2 w-8 h-8 shrink-0">
            <Icon class="text-white" name={item.icon} />
          </div>
          <div>
            <h3 class="font-semibold text-lg">{item.title}</h3>
            <p class="mt-2 leading-relaxed">{item.description}</p>
          </div>
        </div>
      ))
    }
  </div>
</section>
