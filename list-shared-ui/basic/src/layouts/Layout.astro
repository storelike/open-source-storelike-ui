---
import { SEO } from "astro-seo";
import seoData from '../const/seo/seo-data-site.json'; 
import { cmAppConfig as defaultCmsConfig } from "../locale/cms-locale.json";
import Navbar from "../components/navbar/Navbar.astro";
import Footer from "../components/Footer.astro";
import YandexAnalytics from "../components/react-components/app-react/seo/yandex-analytics";
import localeTextSite from "../locale/locale_text_site.json";
import "../stylesSite/global.css";

export interface Props {
  title: string;
  description: string;
  image?: string;
}

type TwitterCardType = "summary" | "summary_large_image" | "app" | "player";

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

// Данные SEO
const {
  nameImgOpengraph,
  titleSiteDefault,
  twitterCreator,
  twitterSite,
  twitterCard,
  numberGoogleMetric: rawGoogleMetric,
  numberYandexMetric,
  yandexWebmaster,
  seoKeywords
} = seoData;

const numberGoogleMetric = Number(rawGoogleMetric) || null;
const resolvedImageWithDomain = new URL(nameImgOpengraph, Astro.site).toString();

const { title, description } = Astro.props;
const makeTitle = title ? `${title} | ${titleSiteDefault}` : titleSiteDefault;
---

<!DOCTYPE html>
<html lang={localeTextSite.globalSettings.locale || "ru"}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preload" href="/fonts/Old-Soviet.otf" as="font" type="font/otf" crossorigin="anonymous">
    <meta name="generator" content={Astro.generator} />
    <meta name="keywords" content={seoKeywords} />
    <meta name="yandex-verification" content={yandexWebmaster} />

    {numberGoogleMetric && (
      <>
        <script type="text/partytown" src={`https://www.googletagmanager.com/gtag/js?id=${numberGoogleMetric}`}></script>
        <script type="text/partytown">
          {`
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag("js", new Date());
            gtag("config", "${numberGoogleMetric}");
          `}
        </script>
      </>
    )}

    <link rel="canonical" href={canonicalURL} />

    <SEO
      title={makeTitle}
      description={description}
      canonical={canonicalURL}
      twitter={{
        creator: twitterCreator,
        site: twitterSite,
        card: twitterCard as TwitterCardType,
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: titleSiteDefault,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: titleSiteDefault,
        },
      }}
    />
  </head>

  <style is:global>
    img { content-visibility: auto; }
  </style>
 
  <body>
    <Navbar />

    {numberGoogleMetric && (
      <noscript>
        <iframe
          src={`https://www.googletagmanager.com/ns.html?id=${numberGoogleMetric}`}
          height="0"
          width="0"
          style="display:none;visibility:hidden"
        ></iframe>
      </noscript>
    )}

    <div id="bgThemeWrapper" class="pt-16" style={{
      background: defaultCmsConfig.bgTheme.value,
      color: defaultCmsConfig.textColorTheme.value
    }}>
      <slot />
      <Footer />
    </div>

    {numberYandexMetric && <YandexAnalytics client:idle />}

    {/* Скрипт для режима админа */}
    <script>
      const isAdmin = new URLSearchParams(window.location.search).get('admin') === 'true';
      if (isAdmin) {
        fetch('https://5173-cs-201391041517-default.cs-europe-west1-onse.cloudshell.dev/api/get-cms-data', { credentials: 'include' })
          .then(res => res.json())
          .then(data => {
            // console.log(data.cmAppConfig);
            const wrapper = document.getElementById('bgThemeWrapper');
            if (wrapper && data?.cmAppConfig) {
              wrapper.style.background = data?.cmAppConfig.bgTheme.value;
              wrapper.style.color = data?.cmAppConfig.textColorTheme.value;
            }
          })
          .catch(err => console.error('Ошибка загрузки админских данных:', err));
      }
    </script>
    
  </body>
</html>
