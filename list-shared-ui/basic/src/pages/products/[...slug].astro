---
import { type CollectionEntry, getCollection } from 'astro:content';
import DetailsProductLayout from '../../layouts/DetailsProductLayout.astro';

export async function getStaticPaths() {
	const products = await getCollection('products');
	// @ts-ignore
	return products.map((post: { slug: any; }) => ({params: { slug: post.slug }, props: post,
	}));
}
type Props = CollectionEntry<'products'>;

const post = Astro.props;
// @ts-ignore
const { Content } = await post.render();
---

<DetailsProductLayout {...post.data}>
	<Content />
</DetailsProductLayout>