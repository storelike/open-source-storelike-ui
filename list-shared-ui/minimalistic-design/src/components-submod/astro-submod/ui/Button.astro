---
// src/components/ui/Button.astro
const { label = "Click Me", type = "button", onClick } = Astro.props;
---

<button
  class="btn"
  type={type}
  onclick={onClick}
>
  {label}
</button>

<style>
  .btn {
    background-color: #007bff;
    color: white;
    border: none;
    padding: 10px 20px;
    font-size: 16px;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .btn:hover {
    background-color: #0056b3;
  }

  .btn:focus {
    outline: none;
    box-shadow: 0 0 0 2px rgba(0, 123, 255, 0.5);
  }
</style>
